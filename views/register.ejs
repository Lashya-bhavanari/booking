                            <label for="repassword" class="text-light">Re-Enter Password &nbsp;&nbsp;&nbsp;&nbsp;<b>:</b></label>
                            <input class="d-inline-block" type="password" class="form-control" placeholder="Confirm Password"
                                name="repassword" style="background-color:transparent" required>
